<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_shift"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.salarycalc.AddShiftActivity"
    tools:layout_editor_absoluteY="89dp"
    tools:layout_editor_absoluteX="0dp">

    <Spinner
        android:id="@+id/spName"
        android:layout_width="148dp"
        android:layout_height="21dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/textView6"
        android:layout_marginStart="53dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/textView6"
        android:layout_marginLeft="53dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:onClick="shiftInput"
        android:text="完了"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="時間"
        app:layout_constraintRight_toRightOf="@+id/textView6"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        android:layout_marginBottom="70dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="日付"
        app:layout_constraintBottom_toBottomOf="@+id/btSlectDate"
        app:layout_constraintTop_toTopOf="@+id/btSlectDate"
        android:layout_marginStart="65dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="65dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="バイト先"
        app:layout_constraintRight_toRightOf="@+id/textView7"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        android:layout_marginTop="131dp"
        android:layout_marginBottom="130dp"
        app:layout_constraintTop_toTopOf="@+id/btSlectDate" />

    <Button
        android:id="@+id/btSlectDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日付を選択"
        android:onClick="selectDate"
        app:layout_constraintBottom_toBottomOf="@+id/txtDate"
        app:layout_constraintTop_toTopOf="@+id/txtDate"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="53dp"
        android:layout_marginEnd="54dp"
        app:layout_constraintRight_toRightOf="@+id/spName"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/textView6"
        android:layout_marginLeft="53dp"
        android:layout_marginRight="54dp" />

    <Spinner
        android:id="@+id/spTime"
        android:layout_width="98dp"
        android:layout_height="26dp"
        android:entries="@array/ingredients_quantity"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.444"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="53dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintRight_toRightOf="@+id/spName"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        android:layout_marginLeft="53dp"
        android:layout_marginRight="50dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="トップへ"
        android:onClick="toTop"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="26dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:textSize="8pt"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="36dp"
        android:layout_marginTop="42dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btSlectDate"
        android:layout_marginLeft="36dp" />

</android.support.constraint.ConstraintLayout>
